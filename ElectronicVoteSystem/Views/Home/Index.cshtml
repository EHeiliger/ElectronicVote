@model ElectronicVoteSystem.Models.ViewModels.LogInViewModel

<div class="container justify-content-center align-items-center" style="margin-top: 15%">
    <div class="row ">
        <div class="col-sm  border-right">
            <h1 style="margin-top:40px">Iniciar Votaciones</h1>
            <div class="d-flex justify-content-center align-items-center">
           
                <form asp-controller="Home" asp-action="VotingBooth">
                    <br/>
                    <button class="btn btn-primary" type="submit"><i class="fas fa-vote-yea"></i> Votar</button>
                </form>
            </div>
        </div>
        <div class="col-md ">
            <h1>Inicar secion </h1>
            <div class="login-form ">
                <form method="post" action="/home/login" autocomplete="off">
                    <div class="form-group">
                        <label asp-for="UserName">Usuario</label>
                        <input asp-for="UserName" class="form-control">
                        <span accesskey="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Clave</label>
                        <input asp-for="Password" class="form-control">
                        <span accesskey="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" type="checkbox" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary"> <i class="fas fa-sign-in-alt"></i> Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
