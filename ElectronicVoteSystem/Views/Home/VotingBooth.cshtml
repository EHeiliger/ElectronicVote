@model ElectronicVoteSystem.Models.ViewModels.voterViewModel
@{
    ViewData["Title"] = "VotingBooth";
}

<h1>Bienvenido</h1>


<div class=" d-flex justify-content-center align-items-center" style="margin-top: 50px">
    <h3><strong>Para ver eleciones pendiente introduzca su cedula</strong> </h3>
</div>

<div class="d-flex justify-content-center align-items-cente" style="margin-top: 100px">

    <form asp-action="VotingBooth">

        <input asp-for="Id" class="form-control form-control-lg" placeholder="000-0000000-0">
        <span asp-validation-for="Id" class="text-danger"></span>
        <div asp-validation-summary="All" class="text-danger"></div>
        <br />
        <button class="offset-3 btn btn-primary"><i class="fas fa-person-booth"></i>  Eleciones</button>
    </form>

</div>

